@using tracker.web.ViewModels;
@model UserViewModel[]

@{
    ViewBag.Title = "Tracker";
}

<h1>App Dev Tracker</h1>

<div class="row margin-top">
    <div class="col-md-12">
        @Html.ActionLink("Create New", "Create")
    </div>
</div>

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-inline margin-top" }))
{
    @Html.ValidationSummary(true)

    <div class="row margin-top">
        <div class="col-md-2">
            <label>Name</label>
        </div>
        <div class="col-md-1">
            <label>Location</label>
        </div>
        <div class="col-md-4">
            <label>Status</label>
        </div>
        <div class="col-md-1">
            <label>Is Bench</label>
        </div>
        <div class="col-md-2">
            <label>Last Updated</label>
        </div>
        <div class="col-md-1">
            <label>Age</label>
        </div>
        <div class="col-md-1">
            <label>Actions</label>
        </div>
    </div>

    for (int i = 0; i < Model.Length; i++)
    {
        @Html.HiddenFor(m => m[i].Id)

        <div class="row margin-top">
            <div class="col-md-2">
                @Html.DisplayFor(m => m[i].Name)
            </div>
            <div class="col-md-1">
                @Html.DisplayFor(m => m[i].Location)
            </div>
            <div class="col-md-4">
                @Html.TextBoxFor(m => m[i].Status, new { placeholder = "Status", @class = "form-control" })
            </div>
             <div class="col-md-1">
                 @Html.CheckBoxFor(m => m[i].IsBench)
            </div>
            <div class="col-md-2">
                @Model[i].LastUpdatedUtc.ToLocalTime().ToString("yyyyMMdd HH:mm:ss")
            </div>
            <div class="col-md-1">
                @DateTime.UtcNow.Date.Subtract(Model[i].LastUpdatedUtc).Days Days Old
            </div>
            <div class="col-md-1">
                @Html.ActionLink("Delete", "Delete", new { id = Model[i].Id })
            </div>
        </div>
    }
    
    <div class="row margin-top">
        <div class="col-md-12">
            <button type="submit" class="btn btn-default pull-right">Submit</button>
        </div>
    </div>
}